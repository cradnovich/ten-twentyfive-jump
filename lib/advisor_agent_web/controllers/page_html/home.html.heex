<%= if @current_user do %>
  <%= live_render(@conn, AdvisorAgentWeb.ChatLive, id: "chat_live", session: %{"user" => @current_user, "hubspot_token" => @hubspot_token}) %>
<% else %>
  <div class="max-w-3xl mx-auto my-12 bg-white rounded-lg shadow-md p-6 text-center">
    <h1 class="text-2xl font-semibold text-gray-800 mb-4">Welcome to AdvisorAgent</h1>
    <p class="text-gray-700 mb-6">Please log in with your Google account to get started.</p>
    <a href="/auth/google" class="px-6 py-3 text-lg font-semibold text-white bg-blue-500 hover:bg-blue-600 rounded-md">Log in with Google</a>
  </div>
<% end %>
